<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpp.devoluciondeenvases">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.hardware.usb.host" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_dmr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_dmr"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".principal.principal.Configuracion"
            android:exported="false" />
        <activity
            android:name=".principal.principal.MensajeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".principal.principal.RegistroSectores"
            android:label="Registrar Sectores"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".principal.principal.DispensadorTurnoPrincipal" />
        <activity android:name=".principal.principal.MainDispensador">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".principal.DispensadorTurno" />
        <activity android:name=".principal.Test" />
        <activity android:name=".principal.ConfigurarApp" />
        <activity android:name=".principal.RegistrarProducto">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpp.devoluciondeenvases.principal.MainActivity" />
        </activity>
        <activity
            android:name=".principal.DevoluciondeEnvases"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".principal.MainActivity" />
    </application>

</manifest>